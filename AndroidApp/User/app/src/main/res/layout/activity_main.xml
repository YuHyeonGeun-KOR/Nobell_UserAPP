<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"

    tools:context=".MainActivity">


    <ImageView
        android:layout_width="186dp"
        android:layout_height="188dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo_main" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:hint="아이디를 입력하세요..."
        android:inputType="textEmailAddress"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textColorHint="#7095B7"
        android:theme="@style/EditTheme" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="10dp"
        android:hint="패스워드를 입력하세요..."
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textColorHint="#7E7878"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:theme="@style/EditTheme" />
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TableRow>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:text="로그인"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_register"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            />
    </TableRow>

</TableLayout>

    <ImageButton
        android:id="@+id/naver_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#00F3F3F3"
        android:scaleType="fitCenter"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/naver_login" />

    <ImageButton
        android:id="@+id/naver_logout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#00F3F3F3"
        android:scaleType="fitCenter"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/logout" />

</LinearLayout>
